<!DOCTYPE html>
<html lang="en">
<head>
    {{>headerlinks}}
</head> 
<body>
    {{>navbar}}

    <!-- Main header -->
    <div class="container-fluid main-header">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto">
                <div class="main-content">
                    <form class="temp_form">
                        <input type="text" id="cityName" placeholder="Enter Your city name" autocomplete="off">
                        <input type="submit" value="search" id="submitBtn">
                    </form>
                </div>

                <div class="tempInfromation">
                    <div class="top_layer">
                        <p id="day">Current Temperature </p>
                        <p id="dates"> </p>
                    </div>
                    <div class="main_layer">
                        <p id="city_name">Get Data Here!!</p>
                        <div class="middle_layer data_hide">
                            <p id="temp"><span id="temp_real_val">0</span><sup>o</sup>C</p>
                            <p id="temp_status"> <i class="fa fa-cloud" aria-hidden="true"></i></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Footer -->
    {{>footer}}

    <script src="js/main.js"></script>
    <script>
        const getCurrentDay = () =>{
            let weekday = new Array(7);
            weekday[0] = "Sunday";
            weekday[1] = "Monday";
            weekday[2] = "Tuesday";
            weekday[3] = "Wednesday";
            weekday[4] = "Thursday";
            weekday[5] = "Friday";
            weekday[6] = "Saturday";

            let currentTime = new Date();
            days = weekday[currentTime.getDay()];
            dates=currentTime.getDate();
            months=currentTime.getMonth();
            let day=document.getElementById('day');
            let date = document.getElementById('date');
            let month = document.getElementById('month');
            date.innerText = dates;
            day.innerText = days;
            month.innerText = months;
        };

        getCurrentDay();
    </script>
</body>
</html>